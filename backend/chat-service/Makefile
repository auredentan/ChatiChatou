SHELL:=/bin/bash
.DEFAULT_GOAL:=help

.PHONY: help

# This Makefile uses an autogenerated help message based on the targets comments.
# To include a target in the help message, just start the comment with HELP.
# See an example below.

help: #HELP Print this help message
	@awk -F ':|#HELP' '/^[^\t].+?:.*?#HELP/ {\
		printf "\033[36m%-40s\033[0m %s\n", $$1, $$NF \
        }' $(MAKEFILE_LIST) | sort

include local/init.mk
include local/dev.mk
